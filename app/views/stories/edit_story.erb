<h1>Make Changes Here</h1>
<%= @story.each_with_index do |s, i| %>
<%= i+1 %>. <%= s.title %>
<%= s.content%>



<form action="/stories/<%= @story.id %>" method="POST">
    <input id="hidden" type="hidden"  name="_method" value="PATCH">
    <input type="text" name="content" value="<% @story.content %>">
    <input type="text" name="title"   value="<% @story.title %>">
    <input type="submit" value="Submit Changes">
</form>